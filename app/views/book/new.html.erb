<%= form_with scope: :book, url: book_index_path,  local: true do |form| %>
<% if @book.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@book.errors.count,"error") %> prohibited from saving
		</h2>
		<ul>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', book_index_path %>
